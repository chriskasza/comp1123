//  Counter represents a simple tally counter.  The Counter class 
//  contains a single integer as instance data, representing the 
//  count. The constructor initializes the count to zero. The click 
//  method increments the count, the getCount method returns the 
//  current count, and the reset method resets the counter to zero. 
//  The accompanying driver class CounterTest is included as an 
//  example of how to leverage the Counter class.
//********************************************************************

public class Counter
{
   // represents the count
   private int count;
   
   //-----------------------------------------------------------------
   //  Constructor; initializes the count variable to zero
   //-----------------------------------------------------------------
   public Counter()
   {
      count = 0;
   }
   
   //-----------------------------------------------------------------
   //  increments the count variable by one
   //-----------------------------------------------------------------
   public void click()
   {
      count++;
   }
   
   //-----------------------------------------------------------------
   //  returns the count variable
   //-----------------------------------------------------------------
   public int getCount()
   {
      return count;
   }
   
   //-----------------------------------------------------------------
   //  resets the count variable
   //-----------------------------------------------------------------
   public void reset()
   {
      count = 0;
   }
   
   
